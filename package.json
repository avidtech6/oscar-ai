{
  "name": "oscar-ai-dev",
  "version": "2.1.0",
  "description": "Oscar AI Dev - Local-first Arboricultural Notebook + Assistant (Svelte 5)",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "prebuild": "node scripts/generate-version.cjs",
    "build": "npm run prebuild && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "version": "node scripts/generate-version.cjs",
    "deploy": "node scripts/auto-deploy.cjs",
    "deploy:message": "node scripts/auto-deploy.cjs \"Auto-deploy: $(date)\""
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.53.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/node": "20.19.0",
    "autoprefixer": "10.4.17",
    "postcss": "8.4.35",
    "svelte": "^5.53.5",
    "svelte-check": "^4.4.4",
    "tailwindcss": "3.4.1",
    "tslib": "2.6.0",
    "typescript": "5.3.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.97.0",
    "@sveltejs/adapter-cloudflare": "^7.2.8",
    "dexie": "^4.0.10",
    "dompurify": "^3.3.1",
    "groq": "^5.9.0",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^3.8.4",
    "jszip": "^3.10.1",
    "markdown-it": "^14.1.1",
    "marked": "^17.0.2",
    "mermaid": "^11.12.2",
    "node-fetch": "^3.3.2",
    "pdfjs-dist": "^5.4.624",
    "pocketbase": "^0.26.8"
  }
}
